    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "postbuild": "node -e \"try { require('fs').accessSync('dist/src/server.js'); console.log('âœ“ Build verification passed'); } catch(e) { console.error('ERROR: dist/src/server.js not found after build!'); process.exit(1); }\"",
    "start": "node dist/src/server.js",
    "migrate": "node dist/src/database/migrations/run.js",
    "setup-db": "tsc && node dist/src/database/setup-database.js",
    "create-admin": "tsc && node dist/src/database/create-admin.js"
